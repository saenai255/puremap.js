    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Debug Jest",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "node",
            "runtimeArgs": ["--inspect", "./node_modules/.bin/jest"],
            "program": "${workspaceFolder}",
            "sourceMaps": true
        }
    ]
}